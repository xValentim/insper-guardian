{
    "manifest_version": 2,
    "name": "SecInsper - Extensão de Segurança",
    "version": "1.0",
  
    "description": "Extensão de segurança para o navegador Chrome, desenvolvida pelo Insper",
  
    "icons": {
      "48": "icons/border-48.png"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html"
      
    },

    "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "<all_urls>"
  ]
}
  